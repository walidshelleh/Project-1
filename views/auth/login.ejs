<%- include('../partials/head', {title: PageTitle}) %>
<%- include('../partials/nav') %>

<div class="container mt-5">
  <form action="/login" method="POST" class="card mx-auto shadow border" style="width: 400px;">
    <div class="card-body">
      <h3 class="text-center">Login</h3>

      <% if (invalid) { %>
        <p class="text-danger text-center">Invalid Username or Password</p>
      <% } %>

      <div class="form-group mt-3">
        <label for="username" class="fw-bold">Username</label>
        <input 
          type="text" 
          class="form-control" 
          name="username" 
          id="username" 
          placeholder="Enter your username" 
          required
        />
      </div>
      <div class="form-group mt-3">
        <label for="password" class="fw-bold">Password</label>
        <input 
          type="password" 
          class="form-control" 
          name="password" 
          id="password" 
          placeholder="Enter your password" 
          required
        />
      </div>
    </div>
    <div class="card-footer text-center">
      <button type="submit" class="btn btn-success w-100">Login</button>
      <a href="/register" class="btn btn-outline-primary w-100 mt-2">Register</a>
    </div>
  </form>
</div>

<%- include('../partials/footer') %>