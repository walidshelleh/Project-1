<%- include("../partials/head.ejs",{title:title}) %>
<%- include("../partials/nav.ejs") %>

<h1>Shop Products</h1>
<table class="table table-striped table-hover">
    <thead><tr><th>Product Name</th><th>Price</th><th>Description</th><th style="width: 10%;" colspan="2"></th></tr>
    </thead>
    <tbody>
        <% for(p of products) {%>
            <tr><td><%= p.name %></td>
                <td><%= p.price %></td> 
                <td><%= p.description %></td> 
                <td><a href="/admin/edit-product/<%= p._id %>" class="btn btn-success">Edit</a></td>
                <td><a href="/admin/delete-product/<%= p._id %>" class="btn btn-warning">Delete</a></td>
            </tr>
        <%}%>
</tbody>
</table>

